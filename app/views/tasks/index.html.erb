<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>

 <% if @tasks.any? %>

  <h1>タスク一覧</h1>
  
   <table class="table table-striped">
     <thead>
       <tr>
         <th>id</th>
         <th>ステータス</th>
         <th>タスク</th>
       </tr>
     </thead>
   <tbody>
    
  <% @tasks.each do |task| %>
    
      <tr>
        <td>
          <%= link_to task.id, task %>
        </td>
        <td>
          <%= task.status %>
        </td>
        <td>
          <%= task.content %>
        </td>
      </tr>
    
    
  <% end %>
 
 <% else %>
  
  <h1>タスク一覧</h1>
  
  <P>現在登録されているタスクはありません</P>
  
 <% end %>
   </tbody>
 </table>
<div>
<%= paginate @tasks %>
</div>

<% end %>

<%= link_to "新規タスクの取り込み", new_task_path, class: "btn btn-primary" %>